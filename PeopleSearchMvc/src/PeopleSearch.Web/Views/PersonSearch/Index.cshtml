@model dynamic
@{
    ViewBag.Title = "Person Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script type="text/javascript">
        var peopleSearchModule = PeopleSearchModuleFactory.create("ps-searchContainer");
    </script>
}

<br />
<div id="ps-searchContainer" class="container">

    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Person Search Criteria
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
                            <div class="ps-criteria">
                                <form class="form-inline">
                                    <div class="form-group">
                                        <label class="sr-only" for="ps-searchText">Enter Search Criteria</label>
                                        <input type="text" id="ps-searchText" class="form-control" placeholder="Enter Search Criteria" value="@ViewBag.SearchText" />
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="ps-searchByInterest" @(ViewBag.ByInterest? "checked=\"checked\"":"")> by Interest 
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <button type="button" id="ps-searchButton" class="btn btn-default">Search</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="ps-loading" style="display: none;" class="text-center">
        <img src="~/Content/loading.gif" alt="Searching"/><br/>
    </div>

    <div id="ps-searchResults"  class="row">

    </div>

    <div id="ps-searchResultTemplate" class="hide">
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <a href="#" target="_blank">
                    <img class="ps-result-profileImage img-rounded" alt="Profile Image">
                </a>
                <div class="caption">
                    <h3 class="ps-result-name text-center"></h3>
                    <div class="well-sm">
                        Born <span class="ps-result-dob"></span>
                    </div>
                    <h5>Interests</h5>
                    <ul class="list-group ps-interests-container">
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
